@model Project__Mini_Stack_Overflow.Models.User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Delete User</h1>

<h3 class="text-center text-danger">Are you sure you want to delete this user?</h3>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div>
            <h4>User Details</h4>
            <hr />
            <dl class="row">
                <!-- Username Field -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Username)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Username)
                </dd>

                <!-- Email Field -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <!-- Password Hash Field -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PasswordHash)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PasswordHash)
                </dd>
            </dl>
        </div>

        <!-- Delete Form -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>
