@model Project__Mini_Stack_Overflow.Models.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">User Details</h1>

<div class="container">
    <h4 class="text-center">User Information</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <dl class="row">
                <!-- Username Field -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Username)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Username)
                </dd>

                <!-- Email Field -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <!-- Password Hash Field -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PasswordHash)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PasswordHash)
                </dd>
            </dl>

            <!-- Action Buttons -->
            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg mr-2">Edit</a>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>
