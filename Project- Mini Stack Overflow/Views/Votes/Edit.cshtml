@model Project__Mini_Stack_Overflow.Models.Vote

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Edit Vote</h1>

<h4 class="text-center">Edit Vote Details</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />

                <!-- IsUpvote Checkbox -->
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsUpvote" />
                        @Html.DisplayNameFor(model => model.IsUpvote)
                    </label>
                </div>

                <!-- UserId Dropdown -->
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <!-- QuestionId Dropdown -->
                <div class="form-group">
                    <label asp-for="QuestionId" class="control-label"></label>
                    <select asp-for="QuestionId" class="form-control" asp-items="ViewBag.QuestionId"></select>
                    <span asp-validation-for="QuestionId" class="text-danger"></span>
                </div>

                <!-- AnswerId Dropdown -->
                <div class="form-group">
                    <label asp-for="AnswerId" class="control-label"></label>
                    <select asp-for="AnswerId" class="form-control" asp-items="ViewBag.AnswerId"></select>
                    <span asp-validation-for="AnswerId" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
